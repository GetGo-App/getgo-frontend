<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <gradient
                android:type="linear"
                android:startColor="#CDFFB0"
                android:centerColor="#FF9CAF"
                android:endColor="#ee82ee"
                android:angle="0"
                />
            <size android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="oval" >
            <stroke android:color="@color/black" android:width="5sp"/>
            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>