<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_button"
    android:paddingHorizontal="15dp"
    android:paddingVertical="5dp"
    android:layout_marginVertical="15dp">

        <TextView
            android:id="@+id/tvTitlePackage"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/kufam"
            android:text="TextView"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDetailPackage"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:fontFamily="@font/kufam"
            android:text="TextView"
            android:textColor="#93BC66"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/tvTitlePackage"
            app:layout_constraintTop_toBottomOf="@+id/tvTitlePackage" />

</androidx.constraintlayout.widget.ConstraintLayout>