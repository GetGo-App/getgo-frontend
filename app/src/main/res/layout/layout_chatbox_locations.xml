<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:padding="8dp"
    android:weightSum="2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardBackgroundColor="#80D9D9D9"
        android:elevation="4dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/imgLocation"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/thumbnail_width"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/sapa" />

        <TextView
            android:id="@+id/tvNameLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/semiround_button"
            android:backgroundTint="#77FFFFFF"
            android:fontFamily="@font/kufam"
            android:gravity="left"
            android:paddingHorizontal="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="13sp" />
    </androidx.cardview.widget.CardView>

    <!-- Container for the map -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"/>
</LinearLayout>
