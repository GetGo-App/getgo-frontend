<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:background="#000000">

    <TextView
        android:id="@+id/titleChatLocation"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:text="TextView"
        android:textSize="15sp"
        android:textColor="#fff"
        android:fontFamily="@font/kufam_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textCount"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="See detail &amp; photo"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/titleChatLocation"
        app:layout_constraintStart_toStartOf="@+id/titleChatLocation"
        app:layout_constraintTop_toBottomOf="@+id/titleChatLocation" />

    <TextView
        android:id="@+id/textCount"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/circle_button"
        android:gravity="center"
        android:text="1"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleChatLocation" />

</androidx.constraintlayout.widget.ConstraintLayout>